{% extends "base.html.twig" %}

{% block title %}
    {{ articles.titre | title}}
{% endblock %}

{% block content %}
    <div class="p-3 mx-auto text-center">
        <h1 class="display-4">{{ articles.titre | title}}</h1>
    </div>

    <div class="py-5 bg-light">
        <div class="container ">
            <div class="row">
                    <div class="col-md-6">
                        <img class="img-fluid" src="../images/articles/{{article.image}}" alt="{{article.titre}}">
                    </div> <!-- Fin col-md-6 -->
                    <div class="col-md-6">
                        {{ article.contenu | raw }}
                    </div> <!-- Fin col-md-6 -->
            </div> <!-- Fin row -->
        </div> <!-- Fin container -->
    </div> <!-- Fin py-5 bg-light -->
{% endblock %}

